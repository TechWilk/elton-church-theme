{% extends 'partials/_master.twig' %}

{% block content %}

{% setcontent news = 'news' orderby '-datepublish' allowpaging %}
{% if news|length > 0 %}
<section>
  <div>
    <h2 class="title">Parish News</h2>
    {% for article in news %}
      {% include 'partials/_article.twig' %}
    {% endfor %}
  </div>
</section>
{% else %}
<section>
  <div>
    <h2 class="title">Parish News</h2>
    <p>No news to show</p>
  </div>
</section>
{% endif %}


{% endblock content %}